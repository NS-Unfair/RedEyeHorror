pico-8 cartridge // http://www.pico-8.com
version 32
__lua__
cartdata("redeye")
--rED eYED
rn=0
rnn=0
rec={2,8}
tsts=false
tstm=0
difn={"calm","annoy","mad","rage","no escape","no escape"}
difc={11,3,5,2,8}
dif=1
function _draw()
 cls(rnn)
 rn+=0.05
 rn=rn%2
 rnn+=0.04
 rnn=rnn%2
 pal(8,rec[ceil(rn)])
 spr(0,4*7.5,16,4,4)
 spr(0,4*7.5+4*8,16,4,4)
 pal()
 local str=difn[dif]
 print("\^t\^w"..str.."\n",64 - (#str * 4),0,difc[dif])
 local str="press ❎ to play"
 print(str,64 - (#str * 2.2),80,difc[dif])
end

function _update60()
 dset(0,dif)
 if btn(❎) and tsts==false then
  tsts=true
 end
 if tsts==true then
  rn+=0.5
  rnn+=0.5
  tstm+=0.1
  if tstm>5 then
   if(--[[dget(1)==1]] false) load("seceye")else load("#rd_lvl1")
  end
 else
 if btnp(➡️)then
  dif+=1
 end
 if btnp(⬅️)then
  dif-=1
 end
 end
 --if dget(1)!=1 then
 if dif>5 then
  dif=1
 end
 if dif<1then
  dif=5
 end
 --[[else
 dif=6
 end]]
end

